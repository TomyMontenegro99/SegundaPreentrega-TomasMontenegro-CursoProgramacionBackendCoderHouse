<!-- FORMULARIO DE CREACIÓN DE PRODUCTOS -->
<section>
  <div class="container mt-6" style="max-width: 500px">
    <form id="form" action="/api/products" method="post">
      <h3 class="is-size-3 mb-5">Ingrese un nuevo producto</h3>
      <div class="field">
        <label class="label">Nombre</label>
        <div class="control has-icons-left has-icons-right">
          <input
            class="input is-success"
            type="text"
            placeholder="Ingrese el nombre del producto"
            value=""
            name="title"
          />
        </div>
      </div>
      <div class="field">
        <label class="label">Descripción</label>
        <div class="control has-icons-left has-icons-right">
          <textarea
            value=""
            name="description"
            class="textarea is-success"
            placeholder="Ingrese una breve descripción del producto"
            rows="3"
          ></textarea>
        </div>
      </div>

      <div class="field">
        <label class="label">Código</label>
        <div class="control has-icons-left has-icons-right">
          <input
            class="input is-success"
            type="text"
            placeholder="Ingrese el código del producto"
            value=""
            name="code"
          />
        </div>
      </div>

      <div class="field">
        <label class="label">Precio</label>
        <div class="control has-icons-left has-icons-right">
          <input
            class="input is-success"
            type="text"
            placeholder="Ingrese el precio del producto"
            value=""
            name="price"
          />
        </div>
      </div>

      <div class="field">
        <label class="label">Stock</label>
        <div class="control has-icons-left has-icons-right">
          <input
            class="input is-success"
            type="number"
            min="0"
            max="10000"
            value="0"
            name="stock"
          />
        </div>
      </div>

      <div class="field">
        <label class="label">Categoría</label>
        <div class="control has-icons-left has-icons-right">
          <div class="select is-primary">
            <select name="category">
              <option value="Tecnología">Tecnología</option>
              <option value="Hogar">Hogar</option>
              <option value="Smartphones">Smartphones</option>
              <option value="Muebles">Muebles</option>
              <option value="Cosmética y belleza">Cosmética y belleza</option>
              <option value="Indumentaria">Indumentaria</option>
              <option value="Herramientas">Herramientas</option>
            </select>
          </div>
        </div>
      </div>

      <div class="field">
        <label class="label">Imágen</label>
        <div class="control has-icons-left has-icons-right">
          <input
            class="input is-success"
            type="text"
            placeholder="Ingrese una URL con la imágen del producto"
            value=""
            name="thumbnail"
          />
        </div>
      </div>
      <div class="field is-grouped">
        <div class="control">
          <button class="button is-primary is-light">Guardar</button>
        </div>
      </div>
    </form>
  </div>
